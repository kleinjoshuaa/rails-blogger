<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>

<p><%= link_to "Delete this tag", tag_path(@tag),  method: :delete, data: {confirm: "Really delete the tag?"}%>
<%= link_to "Back to List of All Tags", tags_path %>
</p>